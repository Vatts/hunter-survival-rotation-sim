<body>

    <div class="buffs-row">
        <div id="spear-buff" class="buff buff-spear">
            <img src="Tip of the Spear.png" alt="Spear">
            <span style="font-weight:bold">x<span id="spear-count">0</span></span>
        </div>
        <div id="sentinel-buff" class="buff buff-sentinel">
            <img src="Sentinel's Mark.png" alt="Sentinel">
            <span style="font-weight:bold">Sentinel's Mark</span>
        </div>
    </div>

    <div class="resources">
        <div class="bar-container">
            <div id="energy-fill"></div>
            <div class="energy-text"><span id="energy-val">100</span> / 100 FOCUS</div>
        </div>
    </div>

    <div class="ability-grid" id="grid"></div>

    <div class="talent-pane" id="talent-pane"></div>

<script>
    let energy = 100;
    let isGCDActive = false;
    let spearStacks = 0;
    let hasSentinelMark = false;
    const maxEnergy = 100;
    const gcdDuration = 750;

    const talents = {
        lethal: { name: "Lethal Calibration", desc: "Bomb reduces Boomstick CD by 2s.", active: false, img: "Wildfire Bomb.png" },
        sentinel: { name: "Sentinel", desc: "Tip of Spear grants 20% Sentinel chance.", active: false, img: "Sentinel's Mark.png" },
        moon: { name: "Moon's Blessing", desc: "+10% proc chance. Sentinel reduces Bomb CD by 6s.", active: false, img: "Moon's Blessing.png" },
        infusion: { name: "Wildfire Infusion", desc: "Kill Command reduces Bomb CD by 1s.", active: false, img: "Wildfire Infusion.png" },
        shells: { name: "Wildfire Shells", desc: "Boomstick reduces Bomb CD by 2s.", active: false, img: "Wildfire Shells.png" }
    };

    const skills = [
        { id: 1, name: "Raptor Strike", cost: 30, cd: 0, img: 'Raptor Strike.png', maxCharges: 1 },
        { id: 2, name: "Kill Command", cost: -25, cd: 4, img: 'Kill Command.png', maxCharges: 2 },
        { id: 3, name: "Wildfire Bomb", cost: 10, cd: 13, img: 'Wildfire Bomb.png', maxCharges: 2 },
        { id: 4, name: "Boomstick", cost: 50, cd: 45, img: 'Boomstick.png', maxCharges: 1 },
        { id: 5, name: "Takedown", cost: -50, cd: 90, img: 'Takedown.png', maxCharges: 1 }
    ];

    skills.forEach(s => { s.currentCharges = s.maxCharges; s.chargeTimers = []; });

    const grid = document.getElementById('grid');
    skills.forEach(s => {
        const btn = document.createElement('div');
        btn.className = 'ability'; btn.id = `btn-${s.id}`;
        btn.onclick = () => useAbility(s.id);
        btn.innerHTML = `
            <img src="${s.img}" class="icon" alt="${s.name}">
            <div class="gcd-overlay" id="gcd-${s.id}"><svg style="transform:rotate(-90deg)" viewBox="0 0 100 100"><circle cx="50" cy="50" r="50" fill="rgba(0,0,0,0.5)" stroke="rgba(255,255,255,0.4)" stroke-width="100" stroke-dasharray="314" stroke-dashoffset="314" id="circle-${s.id}" /></svg></div>
            <div class="cd-overlay" id="cd-${s.id}"></div>
            <span class="timer-text" id="timer-${s.id}"></span>
            ${s.maxCharges > 1 ? `<span class="charges" id="charge-${s.id}">${s.maxCharges}</span>` : ''}
        `;
        grid.appendChild(btn);
    });

    const tPane = document.getElementById('talent-pane');
    for(let key in talents) {
        const card = document.createElement('div');
        card.className = 'talent-card';
        card.onclick = () => { talents[key].active = !talents[key].active; card.classList.toggle('selected'); };
        card.innerHTML = `
            <img src="${talents[key].img}">
            <div class="talent-info">
                <span class="talent-name">${talents[key].name}</span>
                <span class="talent-desc">${talents[key].desc}</span>
            </div>`;
        tPane.appendChild(card);
    }

    // Faster Energy Regen: +1.2 per 100ms (12 Focus/sec)
    setInterval(() => { if (energy < maxEnergy) energy = Math.min(maxEnergy, energy + 1.2); updateUI(); }, 100);

    function reduceCD(skillId, seconds) {
        const s = skills.find(x => x.id === skillId);
        if (s.chargeTimers.length > 0) s.chargeTimers[0] -= (seconds * 1000);
    }

    function useAbility(id) {
        const s = skills.find(x => x.id === id);
        if (isGCDActive || (energy < s.cost && s.cost > 0) || s.currentCharges <= 0) return;

        energy = Math.max(0, Math.min(maxEnergy, energy - s.cost));
        
        if (id === 2) { 
            spearStacks = Math.min(3, spearStacks + 2);
            if (talents.infusion.active) reduceCD(3, 1);
        } else {
            if (spearStacks > 0) {
                spearStacks--;
                if (talents.sentinel.active) {
                    let chance = talents.moon.active ? 0.3 : 0.2;
                    if (Math.random() < chance) {
                        hasSentinelMark = true;
                        if (talents.moon.active) reduceCD(3, 6);
                    }
                }
            }
            if (id === 3) {
                if (talents.lethal.active) reduceCD(4, 2);
                hasSentinelMark = false; 
            }
            if (id === 4 && talents.shells.active) reduceCD(3, 2);
        }

        triggerGCD();
        if (s.cd > 0) {
            s.currentCharges--;
            s.chargeTimers.push(Date.now() + (s.cd * 1000));
            s.chargeTimers.sort((a, b) => a - b);
        }
        updateUI();
    }

    function triggerGCD() {
        isGCDActive = true;
        document.querySelectorAll('.gcd-overlay').forEach(el => {
            el.style.display = 'block';
            const c = el.querySelector('circle');
            c.style.transition = 'none'; c.style.strokeDashoffset = '0';
            setTimeout(() => { c.style.transition = `stroke-dashoffset ${gcdDuration}ms linear`; c.style.strokeDashoffset = '314'; }, 10);
        });
        setTimeout(() => { isGCDActive = false; document.querySelectorAll('.gcd-overlay').forEach(el => el.style.display = 'none'); updateUI(); }, gcdDuration);
    }

    function updateUI() {
        document.getElementById('energy-val').innerText = Math.floor(energy);
        document.getElementById('energy-fill').style.width = energy + '%';
        document.getElementById('spear-buff').className = spearStacks > 0 ? 'buff buff-spear active' : 'buff buff-spear';
        document.getElementById('spear-count').innerText = spearStacks;
        document.getElementById('sentinel-buff').className = hasSentinelMark ? 'buff buff-sentinel active' : 'buff buff-sentinel';
        
        const bombBtn = document.getElementById('btn-3');
        if (hasSentinelMark) bombBtn.classList.add('glow');
        else bombBtn.classList.remove('glow');

        skills.forEach(s => {
            const btn = document.getElementById(`btn-${s.id}`);
            if (isGCDActive || (energy < s.cost && s.cost > 0) || s.currentCharges <= 0) btn.classList.add('disabled');
            else btn.classList.remove('disabled');
        });
    }

    function processTimers() {
        const now = Date.now();
        skills.forEach(s => {
            if (s.cd === 0) return;
            while (s.chargeTimers.length > 0 && now >= s.chargeTimers[0]) {
                s.chargeTimers.shift();
                s.currentCharges = Math.min(s.maxCharges, s.currentCharges + 1);
            }
            const overlay = document.getElementById(`cd-${s.id}`);
            const text = document.getElementById(`timer-${s.id}`);
            const cl = document.getElementById(`charge-${s.id}`);
            if (s.chargeTimers.length > 0) {
                const rem = (s.chargeTimers[0] - now) / 1000;
                overlay.style.height = (rem / s.cd * 100) + '%';
                text.innerText = rem > 0 ? rem.toFixed(1) : '';
            } else { overlay.style.height = '0%'; text.innerText = ''; }
            if (cl) cl.innerText = s.currentCharges;
        });
        requestAnimationFrame(processTimers);
    }
    processTimers();
</script>
</body>
</html>
