<html lang="en">
<head>
    <meta charset="UTF-8">
    <style>
        :root {
            --bg: #0c0c0c;
            --panel: #1a1a1a;
            --energy-color: #e6b400;
            --border: #444;
            --gcd-color: rgba(255, 255, 255, 0.3);
            --spear-green: #2ecc71;
            --sentinel-blue: #3498db;
        }

        body {
            background-color: var(--bg);
            color: #e0e0e0;
            font-family: 'Segoe UI', sans-serif;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            margin: 0;
            user-select: none;
        }

        /* Buff Icons */
        .buffs-row { display: flex; gap: 20px; height: 60px; margin-bottom: 10px; align-items: center; }
        .buff {
            display: flex; align-items: center; gap: 10px;
            padding: 5px 15px; border-radius: 4px;
            background: rgba(0,0,0,0.8); border: 2px solid transparent;
            opacity: 0; transition: 0.2s;
        }
        .buff.active { opacity: 1; }
        .buff-spear { border-color: var(--spear-green); color: var(--spear-green); }
        .buff-sentinel { border-color: var(--sentinel-blue); color: var(--sentinel-blue); }
        .buff img { width: 35px; height: 35px; border-radius: 2px; }

        /* Focus Bar */
        .resources { width: 510px; margin-bottom: 40px; text-align: center; }
        .bar-container {
            width: 100%; height: 28px; background: #222; border-radius: 4px;
            border: 2px solid #555; overflow: hidden; position: relative;
        }
        #energy-fill { height: 100%; width: 100%; background: linear-gradient(to right, #b8860b, var(--energy-color)); }
        .energy-text { position: absolute; width: 100%; text-align: center; top: 0; font-weight: bold; line-height: 28px; text-shadow: 2px 2px 2px black; }

        /* Ability Grid */
        .ability-grid { display: flex; gap: 12px; margin-bottom: 50px; }
        .ability {
            position: relative; width: 85px; height: 85px;
            background: #000; border: 2px solid var(--border);
            border-radius: 4px; cursor: pointer;
            overflow: hidden;
        }
        .ability img.icon { width: 100%; height: 100%; object-fit: cover; display: block; }
        .ability.disabled { filter: grayscale(1) contrast(0.5); cursor: not-allowed; }
        
        /* Sentinel Glow */
        .ability.glow { border-color: var(--sentinel-blue); box-shadow: 0 0 20px var(--sentinel-blue); z-index: 12; animation: pulse-blue 1.5s infinite; }
        @keyframes pulse-blue { 0% { box-shadow: 0 0 5px var(--sentinel-blue); } 50% { box-shadow: 0 0 25px var(--sentinel-blue); } 100% { box-shadow: 0 0 5px var(--sentinel-blue); } }

        /* Cooldown Overlays */
        .cd-overlay { position: absolute; bottom: 0; width: 100%; background: rgba(0,0,0,0.7); height: 0%; z-index: 2; }
        .gcd-overlay { position: absolute; inset: 0; z-index: 5; display: none; }
        .timer-text { position: absolute; inset: 0; display: flex; align-items: center; justify-content: center; font-size: 1.8rem; font-weight: bold; z-index: 10; text-shadow: 0 0 8px black; color: white; }
        .charges { position: absolute; bottom: 2px; right: 4px; font-size: 1.1rem; font-weight: bold; color: #00ff00; z-index: 11; text-shadow: 1px 1px 2px black; }

        /* Talent Pane */
        .talent-pane {
            background: #111; border: 1px solid #333; border-radius: 8px;
            padding: 20px; width: 620px; display: grid; grid-template-columns: 1fr 1fr; gap: 12px;
        }
        .talent-card {
            background: #1a1a1a; padding: 10px; border-radius: 4px;
            border: 1px solid #333; cursor: pointer; display: flex; align-items: center; gap: 10px;
        }
        .talent-card img { width: 40px; height: 40px; border-radius: 3px; filter: grayscale(1); }
        .talent-card.selected { border-color: #e6b400; background: #2a2200; }
        .talent-card.selected img { filter: grayscale(0); }
        .talent-info { display: flex; flex-direction: column; }
        .talent-name { font-weight: bold; color: #e6b400; font-size: 0.85rem; }
        .talent-desc { font-size: 0.7rem; color: #888; }
    </style>
